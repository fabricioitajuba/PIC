//============================================================================//
//     PROGRAMA PARA CRIAR CARACTERES ESPECIAIS NO LCD

#include <16F877.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP,PUT,XT
#use delay(clock=4000000) 

#include <lcd.c>

//Vetor para impressão do caracter º no lCD
const unsigned char simbolo[8]=
{          
    0b00000111,
    0b00000101,
    0b00000111,
    0b00000000,
    0b00000000,
    0b00000000,
    0b00000000,
    0b00000000
};

void simbolo_LCD() 
{
   unsigned char i = 0;             

   lcd_send_byte(0, 0x40);

   for(i = 0; i < 8; i++)
   {
        lcd_send_byte(1, simbolo[i]);
   }
} 

void main()
{
   lcd_init();
   //simbolo_LCD();
   //printf(lcd_putc,"\f+Var=        [V]");
   //printf(lcd_putc,"\n-Var=        [V]");
   
   lcd_send_byte(1, 0b00000111);
   lcd_send_byte(1, 0b00000111);
   lcd_send_byte(1, 0b00000111);
   lcd_send_byte(1, 0b00000111);
   lcd_send_byte(1, 0b00000111);
   lcd_send_byte(1, 0b00000111);
   lcd_send_byte(1, 0b00000111);
   lcd_send_byte(0, 0x80);   
   
   //Imprimi a descrição "Tmp ºC":
   lcd_gotoxy(1, 1); //Rotina para posicionamento de escrita no LCD
   lcd_putc("Tmp/ C: ");
            
   //Chama o vetor para impressão do caracter º no lCD 
   //lcd_gotoxy(5, 1);
   lcd_putc(0);
   
   while(true)
   {
   }
}   



